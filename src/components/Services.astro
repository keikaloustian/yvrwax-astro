---
import { Picture } from "@astrojs/image/components";
import waxDrip from "../media/wax.jpg";
---

<section id="services" class="bg-stone-50 dark:bg-zinc-950">
  <div
    class="relative mx-auto min-w-[300px] max-w-7xl xl:w-[62%] px-2 md:px-6 pt-14 md:pt-24 lg:pt-36 gap-[4%]"
  >
    <Picture
      src={waxDrip}
      widths={[270, 400, 500]}
      sizes="(max-width: 640px) 270px, (max-width: 1080px) 400px, 500px"
      alt="Wax being melted onto the base of a ski"
      class="grayscale"
    />
    <p
      aria-hidden="true"
      class="absolute font-title font-medium dark:text-stone-800 text-stone-200 text-5xl sm:text-6xl md:text-7xl xl:text-8xl"
    >
      SERVICES
    </p>
    <!-- left-[10%] sm:left-[40%] -->
    <h2
      class="relative font-sans font-medium dark:text-yellow-500 text-yellow-700 text-lg md:text-xl xl:text-3xl z-10 mb-[3em]"
    >
      SERVICES
    </h2>
    <!-- sm:left-[50%] -->
    <ul class="relative text-lg lg:text-2xl pl-4">
      <li class="dark:text-stone-200 font-sans dark:font-light mt-[0.5em]">
        Hot Wax<span
          class="font-sans dark:text-yellow-500 text-yellow-700 ml-[1em]"
          >30</span
        >
      </li>
      <li class="dark:text-stone-200 font-sans dark:font-light mt-[0.5em]">
        Edge Sharpening<span
          class="font-sans dark:text-yellow-500 text-yellow-700 ml-[1em]"
          >15</span
        >
      </li>
      <li class="dark:text-stone-300 font-sans dark:font-light mt-[0.5em]">
        (kids gear <span
          class="underline decoration-yellow-500 underline-offset-2"
          >50% off</span
        >)
      </li>
    </ul>
  </div>
</section>
